--- 
interface VisionCardProps { 
    thumbnail: ImageMetadata;
    text: string; 
} 
const { thumbnail, text } = Astro.props; 
--- 

<div class="relative aspect-square rounded-2xl overflow-hidden group transition-transform duration-300 hover:scale-105">
    <img 
        src={thumbnail.src}
        alt={text}
        class="absolute inset-0 w-full h-full object-cover"
    />
    
    <!-- Red overlay -->
    <div class="absolute inset-0 bg-red-800/70"></div>
    
    <!-- Additional red tint for deeper effect -->
    <div class="absolute inset-0 bg-red-900/30 mix-blend-multiply"></div>
    
    <!-- Text container -->
    <div class="absolute inset-0 flex items-center justify-center p-4">
        <h2 class="text-white text-3xl md:text-4xl font-bold tracking-wider">
            {text}
        </h2>
    </div>
</div>