---
import cover from "@/assets/images/backgrounds/KMUTT_LX_Building.png";
---

<div class="p-2">
    <div class="relative py-40 rounded-2xl md:rounded-3xl overflow-clip">
        <img
            src={cover.src}
            class="absolute top-0 left-0 w-full h-full object-cover"
        />
        <div class="absolute bg-black opacity-70 w-full h-full top-0">
        <div class="relative justify-around flex mx-auto px-4 m-auto space-y-4 md:space-y-6">
            <div class="text-white bg-red-500">
                <h1 class="text-3xl md:text-4xl font-bold">Contact Us</h1>
                <p class="text-lg md:text-xl">We are here to help you</p>
            </div>

            <form class="bg-red-500">
                <div class="mb-4">
                  <label class="block text-sm font-bold mb-2" for="name">Name</label>
                  <input class="w-full p-2 text-black rounded" type="text" id="name" name="name" required>
                </div>
                <div class="mb-4">
                  <label class="block text-sm font-bold mb-2" for="email">Email</label>
                  <input class="w-full p-2 text-black rounded" type="email" id="email" name="email" required>
                </div>
                <div class="mb-4">
                  <label class="block text-sm font-bold mb-2" for="message">Message</label>
                  <textarea class="w-full p-2 text-black rounded" id="message" name="message" rows="4" required></textarea>
                </div>
                <div class="mb-4">
                  <label class="inline-flex items-center">
                    <input type="checkbox" class="form-checkbox text-red-600" required>
                    <span class="ml-2">I accept the Terms</span>
                  </label>
                </div>
                <div class="mb-4">
                  <button class="w-full bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" type="submit">Submit</button>
                </div>
              </form>


        </div>

        
    </div>
</div>
