---
interface Props {
  thumbnail: {
    src: string;
    alt?: string;
  };
  categories: string[];
  title: string;
  content: string;
  author: string;
  authorAvatar: string;
  pubDate: string;
}

const { thumbnail, categories, title, content, author, authorAvatar, pubDate } = Astro.props as Props;
---

<div class="text-white p-4 rounded-lg space-y-3">
  <div class="relative rounded-2xl overflow-hidden">
    <img src={thumbnail.src} alt={thumbnail.alt} class="w-full h-52 object-cover" />
  </div>
  <div class="space-y-2">
    <h2 class="text-xl font-bold">{title}</h2>
    <p class="text-sm">{content}</p>
    <div class="flex items-center space-x-2">
      <img src={authorAvatar} alt={author} class="w-8 h-8 rounded-full" />
      <span>{author}</span>
    </div>
    <div class="text-xs text-gray-400">{pubDate}</div>
    <div class="flex space-x-2">
      {categories.map(category => (
        <span class="bg-gray-700 px-2 py-1 rounded">{category}</span>
      ))}
    </div>
  </div>
</div>